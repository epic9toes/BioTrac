<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".LecturerSearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="@color/colorPrimaryDark"
        >
        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginLeft="15dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/button_ripple"
            />

        <TextView
            android:layout_toEndOf="@id/closeBtn"
            android:id="@+id/topText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="normal"
            android:layout_marginBottom="40dp"
            android:text="Lecturer Fingerprint Enrollment"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/closeBtn"
            android:hint="Enter Phone No or Name."
            android:background="@drawable/rounded_white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:drawableStart="@drawable/ic_search"
            android:clickable="true"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

    <include
        android:visibility="gone"
        android:id="@+id/loading"
        layout="@layout/loading"/>

    <include android:visibility="gone" android:id="@+id/notFound"
        layout="@layout/not_found"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/lecturer_list_layout"></androidx.recyclerview.widget.RecyclerView>

</androidx.appcompat.widget.LinearLayoutCompat>