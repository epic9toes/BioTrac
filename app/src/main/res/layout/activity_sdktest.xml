<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SDKTestActivity"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <Button
            android:id="@+id/connectBT"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Connect Bluetooth"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:background="@drawable/rounded_btn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/enrollFP"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Enroll Fingerprint"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:background="@drawable/rounded_btn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/captureFP"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Capture Fingerprint"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:background="@drawable/rounded_btn_error"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center" />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>