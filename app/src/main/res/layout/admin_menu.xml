<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.5"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="10dp"
    >

    <!--    first option-->
    <LinearLayout
        android:id="@+id/enroll_lecturer"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_rectangle">
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lecturer"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:textStyle="normal"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:layout_weight="1"
            android:ellipsize="none"
            android:textAlignment="center"
            android:text="Enroll Lecturer"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <!--    second option-->
    <LinearLayout
        android:id="@+id/update_std_bio"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_rectangle">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_click"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:layout_weight="1"
            android:ellipsize="none"
            android:text="Student Bio Update"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <!--    third option-->
    <LinearLayout
        android:id="@+id/update_lecturer_bio"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_rectangle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_tap"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textStyle="normal"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:layout_weight="1"
            android:ellipsize="none"
            android:textAlignment="center"
            android:text="Lecturer Bio Update"
            android:paddingBottom="10dp"/>
    </LinearLayout>

</GridLayout>