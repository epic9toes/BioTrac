<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlCompat" >

    <androidx.cardview.widget.CardView
        card_view:cardElevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_ripple">

            <LinearLayout
                android:id="@+id/imgContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <TextView
                android:id="@+id/username"
                android:layout_alignLeft="@id/imgContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammed Ali C."
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="105dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/stdDepartment"
                android:layout_alignLeft="@id/imgContainer"
                android:layout_marginLeft="105dp"
                android:layout_below="@id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Engineering"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/stdRegNo"
                android:layout_alignLeft="@id/imgContainer"
                android:layout_marginLeft="105dp"
                android:layout_below="@id/stdDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esut/2001/02365"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="true"
                android:paddingBottom="10dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:src="@drawable/ic_arrow_forward_ios"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
